@model Restaurant.ViewModels.HomeModel

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";

}


<div class="slider-area">
    <div class="slider-active owl-dot-style owl-carousel">
        @foreach (var item in Model.ListMasterSlider.Take(3))
        {


            <div class="single-slider bg-img height-100vh d-flex align-items-center justify-content-center" style="background-image:url(/images/@item.MasterSliderUrl);">
                <div class="slider-content pt-100">
                    <div class="slider-content-wrap slider-animated-1">
                        @Html.Raw(item.MasterSliderTitle)
                        @Html.Raw(item.MasterSliderBreef)
                        <p>
                            @Html.Raw(@item.MasterSliderDesc)

                        </p>
                        <div class="slider-btn mt-20">
                            <a class="animated" href="@item.MasterSliderUrl2">read more</a>
                        </div>
                    </div>
                </div>
            </div>

        }


    </div>
</div>
<div class="about-area ptb-95">
    <div class="container">
        <div class="row d-flex align-items-center">
            <div class="col-lg-6">
                <div class="about-content pr-30">
                    <h2>@Model.SystemSetting.SystemSettingWelcomeNoteTitle </h2>
                    <h3> @Model.SystemSetting.SystemSettingWelcomeNoteBreef </h3>
                    <div class="about-peragraph">
                        @Html.Raw(@Model.SystemSetting.SystemSettingWelcomeNoteDesc)
                        <div class="default-btn-style mt-35">
                            <a href="@Model.SystemSetting.SystemSettingWelcomeNoteUrl">read more</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-img">
                    <img alt="" src="~/images/@Model.SystemSetting.SystemSettingWelcomeNoteImageUrl">
                </div>
            </div>
        </div>
    </div>
</div>
<div class="popular-product gray-bg pt-100 pb-100">
    <div class="container">
        <div class="section-title text-center mb-50">
            <h2>Our Popular Dishes</h2>
            <p> Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim nostrud exercitation ullamco laboris nisi.</p>
        </div>
        <div class="product-slider-active owl-carousel">


            @foreach (var item in Model.ListMasterItemMenu.Skip(Model.ListMasterItemMenu.Count() - 5))
            {
                <div class="product-style-wrap">
                    <img alt="" src="~/images/@item.MasterItemMenuImageUrl">
                    <div class="product-content text-center">
                        <h4>@item.MasterItemMenuTitle</h4>
                        <p> @Html.Raw(item.MasterItemMenuInfo)</p>
                        <span>@Html.Raw(item.MasterItemMenuPrice)</span>
                    </div>
                </div>
            }


        </div>
    </div>
    <div class="popular-bg-img">
        <img alt="" src="assets/img/banner/popular.png">
    </div>
</div>


<div class="book-table ptb-100 bg-img" id="book" style="background-image:url(assets/img/banner/book-a-table.jpg);">
    <div class="container">
        <div class="section-title text-center mb-50">
            <h2>book a table</h2>
            <p> Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim nostrud exercitation ullamco laboris nisi.</p>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="reserve-form">
                    <h3 class="reserv-title">Reservation Form</h3>
                    <form asp-action="BookTable" asp-controller="Home">
                        <div class="reserve-form-top">
                            <input asp-for="TransactionBookTable.TransactionBookTableFullName" type="text" placeholder="Full name" required>
                            <input asp-for="TransactionBookTable.TransactionBookTableEmail" type="email" placeholder="Email address" required>
                            <input asp-for="TransactionBookTable.TransactionBookTableMobileNumber" type="text" placeholder="Mobile number" required>
                            <div class="date-time">
                                <select asp-for="TransactionBookTable.TransactionBookTableDate">
                                    <option selected="">Select Date And Time</option>
                                    <option>26 Dec - 10.00pm</option>
                                    <option>2 Jan - 10.00pm</option>
                                    <option>17 Dec - 10.00pm</option>
                                </select>
                            </div>
                        </div>
                        <div class="reserve-submit mt-40">
                            <button type="submit"> submit </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="book-img">
                    <img src="assets/img/banner/table.png" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
<div class="testimonial-area ptb-100 gray-bg">
    <div class="container">
        <div class="section-title text-center mb-50">
            <h2>what people say</h2>
            <p> Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim nostrud exercitation ullamco laboris nisi.</p>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="testimonial-image-slider text-center">
                    @foreach (var item in Model.ListFeedBack)
                    {
                        <div class="single-testi-text">
                            <p>@item.FeedBackMessage</p>
                        </div>

                    }

                </div>
                <div class="testimonial-text-slider text-center">
                    @foreach (var item in Model.ListFeedBack)
                    {
                        <div class="single-testi-img">
                            <img src="/images/@item.FeedBackImgUrl" />
                            @Html.Raw(item.FeedBackName)
                            @Html.Raw(item.FeedBackRole)
                        </div>
                    }




                </div>
            </div>
        </div>
    </div>
</div>